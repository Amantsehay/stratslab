# StratslabAPI Docker Environment Configuration
# Copy this file to .env and update values as needed

# PostgreSQL Configuration
POSTGRES_DB=stratslab_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# API Configuration
API_PORT=8000

# Security & Encryption
# SECRET_KEY must be at least 32 characters long with diverse characters (REPLACE THIS PLACEHOLDER)
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE-ME-INSECURE-PLACEHOLDER

# Server Configuration
TRUSTED_HOST=localhost

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000

# Database Connection Pool Settings
POOL_SIZE=5
POOL_MAX_OVERFLOW=10
POOL_TIMEOUT=30
POOL_RECYCLE=-1

# Feature Flags (development defaults)
ENABLE_HTTPS_REDIRECT=false
SEND_EMAILS=false
ACTIVATE_USERS=false
ENABLE_SENTRY=false
COUNT_API_REQUESTS=false
