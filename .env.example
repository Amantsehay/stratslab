# Database Configuration
# PostgreSQL connection string with asyncpg driver
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/stratslab_dev

# Security & Encryption
# Secret key for encryption, JWT signing, and session management
# Must be at least 32 characters for secure encryption
SECRET_KEY=your-secret-key-here-change-in-production

# Server Configuration
# Trusted host for URL generation and security
TRUSTED_HOST=localhost

# CORS Configuration
# Comma-separated list of allowed origins for cross-origin requests
ALLOWS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000

# Database Connection Pool Settings
# Number of connections to keep in the connection pool
POOL_SIZE=5

# Maximum number of overflow connections beyond POOL_SIZE
POOL_MAX_OVERFLOW=10

# Connection timeout in seconds
POOL_TIMEOUT=30

# Recycle connections after N seconds (-1 = no recycling)
POOL_RECYCLE=-1

# Feature Flags
# Enable HTTPS redirect
ENABLE_HTTPS_REDIRECT=false

# Enable email sending functionality
SEND_EMAILS=false

# Auto-activate new users
ACTIVATE_USERS=false

# Enable Sentry error tracking
ENABLE_SENTRY=false

# Enable API request counting middleware
COUNT_API_REQUESTS=false

# API Documentation Configuration
# URL path for Swagger UI documentation
DOCS_URL=/api-docs

# URL path for ReDoc alternative documentation
REDOC_URL=/redoc

# URL path for OpenAPI JSON schema
OPENAPI_URL=/openapi.json
